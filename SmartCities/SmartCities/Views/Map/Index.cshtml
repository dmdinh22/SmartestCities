
@{
    ViewBag.Title = "Index";
}

@section stylesheets{
    <style>
            /* Always set the map height explicitly to define the size of the div
        * element that contains the map. */
            #map {
                height: 500px;
                border-radius: 5px;
                border: 1px solid silver;
                background-color: grey;
                margin:50px;
            }
            /* Optional: Makes the page fill the window. */
            html, body {
                height: 100%;
                margin-top: 0;
                padding: 0;
            }

            #floating-panel {
                position: relative;
                top: 88px;
                left: 40%;
                z-index: 5;
                background-color: #fff;
                padding: 5px;
                border: 1px solid #999;
                text-align: center;
                font-family: 'Roboto','sans-serif';
                line-height: 30px;
                padding-left: 10px;
            }

            /*#floating-panel {
                background-color: #fff;
